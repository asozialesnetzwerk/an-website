{
  "typescript": {
    "deno": true,
    "indentWidth": 4,
    "quoteProps": "asNeeded",
    "singleBodyPosition": "nextLine",
    "binaryExpression.linePerExpression": true,
    "memberExpression.linePerExpression": true,
    "commentLine.forceSpaceAfterSlashes": true
  },
  "json": {
    "deno": true,
    "commentLine.forceSpaceAfterSlashes": true
  },
  "markdown": {
    "deno": true
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml}",
    "Dockerfile"
  ],
  "excludes": [
    "**/node_modules",
    "an_website/static/css",
    "an_website/static/js",
    "an_website/vendored",
    "build/lib/an_website",
    "style/snow.css",
    "venv"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.85.0.wasm",
    "https://plugins.dprint.dev/json-0.17.4.wasm",
    "https://plugins.dprint.dev/markdown-0.15.3.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.0.wasm"
    // "https://plugins.dprint.dev/disrupted/css-0.2.2.wasm" (currently broken)
  ]
}
